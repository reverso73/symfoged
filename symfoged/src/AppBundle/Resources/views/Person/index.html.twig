{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Copropriétaires</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Actif ?</th>
                <th>Memb. CS ?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('coproprietaire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.isActive }}</td>
                <td>{{ entity.isInCS }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('coproprietaire_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('coproprietaire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('coproprietaire_new') }}">
                Créer un nouveau
            </a>
        </li>
    </ul>
    {% endblock %}
